<div class="tab-pane fade" id="add-news" role="tabpanel" aria-labelledby="profile-tab">
    <div class="card shadow mb-4 mb-2">
        <div class="card-body">
            <form action="/admin/news" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Kategori Berita</label>
                    <select class="form-control" name="scoopId">
                        <option value="" disabled selected>Kategori</option>
                        <% for(i = 0; i < scoop.length; i++) { %>
                            <option value="<%= scoop[i].id %>"><%= scoop[i].name %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="name">Headline</label>
                    <input type="text" class="form-control" name="headline" placeholder="Enter Headline Berita" required>
                </div>
                <div class="form-group">
                    <label for="name">Image Berita</label>
                    <input type="file" class="form-control" name="image" required>
                </div>
                <div class="form-group">
                    <label for="name">Deskripsi Berita</label>
                    <textarea class="form-control" name="about" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
            </form>
        </div>
    </div>
</div>