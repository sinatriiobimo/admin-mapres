<div class="tab-pane fade" id="add-distinguish" role="tabpanel" aria-labelledby="profile-tab">
    <div class="card shadow mb-4 mb-2">
        <div class="card-body">
            <form action="/admin/distinguish" method="POST">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name">Nama Mahasiswa</label>
                        <select class="form-control" name="studentId">
                            <option value="" disabled selected>Nama Mahasiswa</option>
                            <% for(i = 0; i < student.length; i++) { %>
                                <option value="<%= student[i].id %>"><%= student[i].name %> - <%= student[i].majorId.name %></option>
                                <% } %>
                            </select>                    
                        </div>
                        <div class="form-group">
                            <label for="name">Prestasi Terbaik</label>
                            <input type="text" class="form-control" name="best" placeholder="Enter Prestasi Terbaik" required>
                        </div>
                        <div class="form-group">
                            <label for="name">Tips & Pesan</label>
                            <textarea class="form-control" name="about" required></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>