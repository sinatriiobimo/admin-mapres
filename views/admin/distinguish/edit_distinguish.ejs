<div class="tab-pane fade show active" id="edit-distinguish" role="tabpanel" aria-labelledby="profile-tab">
    <div class="card shadow mb-4 mb-2">
        <div class="card-body">
            <form action="/admin/distinguish/<%= distinguish.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name">Nama Mahasiswa</label>
                        <select class="form-control" name="studentId">
                            <option value="<%= distinguish.studentId._id %>" disabled selected><%= distinguish.studentId.name %></option>
                            <% for(i = 0; i < student.length; i++) { %>
                                <option value="<%= student[i].id %>"><%= student[i].name %></option>
                                <% } %>
                            </select>                    
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name">Prestasi Terbaik</label>
                        <input type="text" class="form-control" value="<%= distinguish.best %>" name="best" placeholder="Enter Prestasi Terbaik" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Tips & Pesan</label>
                        <textarea class="form-control" name="about" required><%= distinguish.about %></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary">
                        <a style="text-decoration: none; color: white;" href="/admin/distinguish">Close</a>
                    </button>                    
                    <button type="submit" class="btn btn-success">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>