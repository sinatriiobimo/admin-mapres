<div class="tab-pane fade show active" id="show-student" role="tabpanel" aria-labelledby="home-tab">
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Tahun Masuk</th>
                            <th>Nama Mahasiswa</th>
                            <th>NPM</th>
                            <th>Fakultas</th>
                            <th>Jurusan</th>
                            <th>Email</th>
                            <th>No Telp</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < student.length; i++) { %>
                            <tr>
                                <td><%= i+1 %></td>
                                <td><%= student[i].yearStart.getUTCFullYear() %></td>
                                <td><%= student[i].name %></td>
                                <td><%= student[i].npm %></td>
                                <td><%= student[i].facultyId.name %></td>
                                <td><%= student[i].majorId.name %></td>
                                <td><%= student[i].email %></td>
                                <td><%= student[i].telp %></td>
                                <td>
                                    <form action="/admin/student/<%= student[i].id %>/delete?_method=DELETE" method="POST">
                                        <a href="/admin/student/<%= student[i].id %>" class="btn btn-warning btn-circle btn-sm"><i class="fas fa-edit"></i></a>
                                        <button type="submit" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                            <% } %>
                        </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
