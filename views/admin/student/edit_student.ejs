<div class="tab-pane fade show active" id="edit-student" role="tabpanel" aria-labelledby="profile-tab">
    <div class="card shadow mb-4 mb-2">
        <div class="card-body">
            <form action="/admin/student/<%= student.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name">Nama Mahasiswa</label>
                        <input type="text" class="form-control" value="<%= student.name %>" name="name" placeholder="Enter Nama Mahasiswa" required>
                    </div>
                    <div class="form-group">
                        <label for="name">NPM Mahasiswa</label>
                        <input type="text" class="form-control" name="npm" value="<%= student.npm %>" placeholder="Enter NPM Mahasiswa" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Email Mahasiswa</label>
                        <input type="email" class="form-control" value="<%= student.email %>" name="email" placeholder="Enter Email Mahasiswa" required>
                    </div>
                    <div class="form-group">
                        <label for="name">No.Telp Mahasiswa</label>
                        <input type="tel" class="form-control" value="<%= student.telp %>" name="telp" placeholder="0812-XXXX-XXXX" pattern="[0-9]{4}-[0-9]{4}-[0-9]{4}" required>  
                    </div>
                    <div class="form-group">
                        <label for="name">Upload Foto Mahasiswa</label>
                        <input type="file" class="form-control" name="image">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary">
                        <a style="text-decoration: none; color: white;" href="/admin/student">Close</a>
                    </button>
                    <button type="submit" class="btn btn-success">Update</button>
                </div>
            </div>
        </form>
    </div>
</div>
</div>