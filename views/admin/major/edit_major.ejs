<div class="tab-pane fade show active" id="edit-major" role="tabpanel" aria-labelledby="profile-tab">
    <div class="card shadow mb-4 mb-2">
        <div class="card-body">
            <form action="/admin/major/<%= major.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name">Nama Jurusan</label>
                        <input type="text" class="form-control" value="<%= major.name %>" name="name" placeholder="Enter Nama Jurusan" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Kode Jurusan</label>
                        <input type="text" class="form-control" value="<%= major.code %>" name="code" placeholder="Enter Kode Jurusan" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Nama Fakultas</label>
                        <select class="form-control" name="facultyId">
                            <option value="<%= major.facultyId.id %>" disabled selected><%= major.facultyId.name %></option>
                            <% for(i = 0; i < faculty.length; i++) { %>
                                <option value="<%= faculty[i].id %>"><%= faculty[i].name %></option>
                                <% } %>
                            </select>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary">
                                <a style="text-decoration: none; color: white;" href="/admin/major">Back</a>
                            </button>
                            <button type="submit" class="btn btn-success">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>