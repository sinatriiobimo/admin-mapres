<div class="tab-pane fade show active" id="edit-major" role="tabpanel" aria-labelledby="profile-tab">
    <div class="card shadow mb-4 mb-2">
        <div class="card-body">
            <form action="/admin/major/<%= major.id %>?_method=PUT" method="POST">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name">Fakultas</label>
                        <select class="form-control" name="facultyId">
                            <option value="<%= major.facultyId._id %>" selected disabled><%= major.facultyId.faculty %></option>
                            <% for(i = 0; i < faculty.length; i++) { %>
                                <option value="<%= faculty[i].id %>"><%= faculty[i].faculty %></option>
                            <% } %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="name">Kode Jurusan</label>
                        <input type="text" class="form-control" value="<%= major.code %>" name="code" placeholder="Enter Kode Jurusan" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Nama Jurusan</label>
                        <input type="text" class="form-control" value="<%= major.name %>" name="name" placeholder="Enter Nama Jurusan" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Jumlah Prestasi Akademik</label>
                        <input type="number" class="form-control" name="academic" value="<%= major.academic %>" placeholder="Enter Qty Akademik" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Jumlah Prestasi Non Akademik</label>
                        <input type="number" class="form-control" name="nonAcademic" value="<%= major.nonAcademic %>" placeholder="Enter Qty Non Akademik" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>