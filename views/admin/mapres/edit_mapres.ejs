<div class="tab-pane fade show active" id="edit-mapres" role="tabpanel" aria-labelledby="profile-tab">
    <div class="card shadow mb-4 mb-2">
        <div class="card-body">
            <form action="/admin/mapres/<%= mapres.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <div class="form-group">
                        <label for="name">Fakultas</label>
                        <select class="form-control" name="facultyId">
                            <option value="<%= mapres.facultyId._id %>" selected><%= mapres.facultyId.faculty %></option>
                            <% for(i = 0; i < faculty.length; i++) { %>
                                <option value="<%= faculty[i].id %>"><%= faculty[i].faculty %></option>
                                <% } %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="name">Nama Mahasiswa</label>
                            <select class="form-control" name="studentId">
                                <option value="<%= mapres.studentId._id %>" selected><%= mapres.studentId.name %></option>
                                <% for(i = 0; i < student.length; i++) { %>
                                    <option value="<%= student[i].id %>"><%= student[i].name %> - <%= student[i].majorId.name %></option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="name">Best Achievements</label>
                                <input type="text" class="form-control" name="label" value="<%= mapres.label %>" placeholder="Enter Best Achievements" required>
                            </div>
                            <div class="form-group">
                                <label for="name">Tips</label>
                                <textarea class="form-control" name="tips" value="<%= mapres.tips %>" required><%= mapres.tips %></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Update</button>
                        </form>
                    </div>
                </div>
            </div>